<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
        <h2>Users search for '<%= @content %>'</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Introduction</th>
                </tr>
            </thead>
        <% @records.each do |user| %>
            <tbody>
                <tr>
                    <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image-icon.jpeg") %></td>
                    <td><%= user.name %></td>
                    <td><%= user.introduction %></td>
                    <td>フォロー数:<%=user.followings.count %></td>
                    <td>フォロワー数:<%= user.followers.count%></td>
                <%# フォロー機能 %>
                    <td>
                        <% unless user == current_user %>
                          <% if current_user. following?(user) %>
                            <%= link_to "フォローをやめる", user_relationships_path(user.id), method: :delete %>
                          <% else %>
                            <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
                          <% end %>
                        <% end %>
                    </td>
                    <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
            </tbody>
        <% end %>
    <% elsif @model == "book" %>
        <h2>Books search for '<%= @content %>'</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
            <% @records.each do |book| %>
            <tbody>
                <tr>
                    <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image-icon.jpeg") %></td>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                <%# いいね機能 %>
                    <td class="favorite-btn">
                    <%= render 'favorites/favorite', book: @book %>
                   </td>
                <%#コメント数表示%>
                   <td>コメント数：<%= book.book_comments.count %></td>
                </tr>
            </tbody>
            <% end %>
    <% end %>
    </table>
  </div>
</div>