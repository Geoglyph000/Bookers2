<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@post_book.user.id) do %>
                <%= attachment_image_tag @post_book.user, :profile_image, :fill, 50, 50, fallback: "no_image-icon.jpeg" %><br>
                <%= @post_book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(@post_book.id) do %><%= @post_book.title%><% end %></td>
              <td><%= @post_book.body %></td>
              <% if @post_book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@post_book), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@post_book), method: :delete, data:{ confirm: "Are you sure to delete this book?"}, class: "btn btn-sm btn-danger" %></td>
              <% end %>
              <td>コメント件数：<%= @book.book_comments.count %></td>
            </tr>
          </tbody>
        </table>
    </div>

    <div class="comments">
      <%= @book.book_comments. each do |post_comment| %>
        <%= attachment_image_tag book_comment.user :profile_image, :fill, 30, 30, fallback: "no_image-icon.jpeg" %>
        <%= book_comment.user.name %>
        <%= book_comment.comment%>
      <% end %>
    </div>
    <div class="new-comment">
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <%= f_text_area :comment, rows: '5', placeholder: "新規コメント" %>
        <%= f.submit "送信" %>
      <% end %>
    </div>

  </div>
</div>


