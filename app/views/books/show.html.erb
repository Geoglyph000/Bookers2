<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@post_book.user.id) do %>
                <%= attachment_image_tag @post_book.user, :profile_image, :fill, 50, 50, fallback: "no_image-icon.jpeg" %><br>
                <%= @post_book.user.name %>
                <% end %>
              </td>
              <td><%= link_to book_path(@post_book.id) do %><%= @post_book.title%><% end %></td>
              <td><%= @post_book.body %></td>
              <% if @post_book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@post_book), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Delete", book_path(@post_book), method: :delete, data:{ confirm: "Are you sure to delete this book?"}, class: "btn btn-sm btn-danger" %></td>
              <% end %>
        <%#いいね機能%>
              <td>
                <% if @post_book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(@post_book), method: :delete do %>
                    ♥<%= @post_book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(@post_book), method: :post do %>
                    ♡<%= @post_book.favorites.count %>
                  <% end%>
                <% end %>
              </td>
        <%#コメント数表示%>
              <td>コメント数：<%= @post_book.book_comments.count %></td>
            </tr>
          </tbody>
        </table>


        <h5>Comments</h5>
        <table class="table">
          <tbody>
              <% @post_book.book_comments. each do |book_comment| %>
                <tr>
                  <td>
                    <%= attachment_image_tag book_comment.user, :profile_image, :fill, 30, 30, fallback: "no_image-icon.jpeg" %><br>
                    <%= book_comment.user.name %>
                  </td>
                  <td><%= book_comment.comment %></td>
                  <td>
                    <% if book_comment.user == current_user %>
                      <div class="comment-delete">
                        <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
                      </div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>



      <div class="new-comment">
        <%= render 'layouts/error', obj: @book_comment %>
        <%= form_with(model:[@post_book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, placeholder: "新規コメント", :class => 'comment_area' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>

    </div>

  </div>
</div>


